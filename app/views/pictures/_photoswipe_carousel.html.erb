<legend><%= _("Immagini") %></legend>

<div id="Gallery">
	
	<% slice_num = 4 %>

	<% pictures.each_slice(slice_num) do |group| %>
		<div class="row">

			<% group.each do |picture| %>
			
				<div class="col-sm-<%= 12/slice_num %>">
					<%= link_to image_tag(picture.photo.url(:small), 
								:alt => picture.photo_file_name, :class => 	"img-thumbnail"),
							picture.photo.url %>
				</div>

			<% end %>
		</div>
	<% end %>
	
</div>

<script type="text/javascript">	
	$(document).ready(function(){
		$("#Gallery a").photoSwipe();
	});
</script>
