<%= simple_form_for(@user_session, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :username, :label => "Username", :placeholder => "Username" %>
    <%= f.input :password, :label => "Password", :placeholder => "Password", as: :password %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Login", :class => "btn btn-success btn-large" %>
  </div>
<% end %>
